{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "",
  "type": "object",
  "properties": {
    "id": {
      "type": "number",
      "description": "Уникальный идентификатор организации"
    }, 
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Название организации"
    },
    "inn": {
      "type": "number"
    },
    "kpp": {
      "type": "number"
    },
    "contracts": {
      "description": "Список контрактов/договоров организации",
      "type": "array",
      "uniqueItems": true,
      "minItems": 1,
      "items": {
        "properties": {
          "id": {
            "type": "number",
            "description": "Уникальный идентификатор контракт/договора"
          }, 
          "number": {
            "type": "string",
            "minLength": 1
          },
          "dateCreate": {
            "type": "string",
            "format": "date-time",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
            "minLength": 1,
            "description": "Дата создания контракта/договора"
          },
          "specialProgram": {
            "type": "number",
            "description": "Код спец программы",
            "default": 1
          },
          "billingMethod": {
            "type": "string",
            "enum": [
              "dynamic",
              "static"
            ],
            "description": "Способ тарификации",
            "default": "dynamic"
          },
          "shops": {
            "description": "Список магазинов, торговых точек ТСТ",
            "type": "array",
            "uniqueItems": true,
            "minItems": 1,
            "items": {
              "properties": {                
                "name": {
                  "type": "string",
                  "minLength": 1,
                  "description": "Название магазина, торговая точка ТСТ"
                },
                "mcc": {
                  "type": "string",
                  "minLength": 1
                }
              }
            }
          }
        }
      }
    }
  }
}